@model VideoViewModel
@{
    ViewData["Title"] = "Video";
}

<h1>Video</h1>

<div class="row small-buttom-margin">
    <div class="col-sm-12">
        <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Course" 
           asp-route-id="@Model.Course.Id">
            <i class="material-icons vertical-align no-left-margin">keyboard_arrow_left</i>
            <span class="vertical-align">Back To @Model.Course.CourseTitle</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-9">
      
                @if (Model.Video != null && Model.Course != null && Model.LessonInfo != null 
                     && Model.Instructor != null)
                {
                    <partial name="_VideoPlayerPartial" model="@Model"/>
                }
    </div>

    <div class="col-sm-3">
                @if (Model != null && Model.LessonInfo != null)
                {
                   
                    <partial name="_VideoComingUpPartial" model="@Model.LessonInfo"/>
                }
                

            @if (Model!= null && Model.Instructor != null)
            {
                <partial name="_InstructorViewModel" model="@Model.Instructor"/>
            }
        </div>
</div>