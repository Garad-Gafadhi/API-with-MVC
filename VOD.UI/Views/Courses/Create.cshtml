@model CourseDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create </h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseImageUrl" class="control-label"></label>
                <input asp-for="CourseImageUrl" class="form-control" />
                <span asp-validation-for="CourseImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarqueeImageUrl" class="control-label"></label>
                <input asp-for="MarqueeImageUrl" class="form-control" />
                <span asp-validation-for="MarqueeImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label"></label>
                <input asp-for="CourseTitle" class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseDescription" class="control-label"></label>
                <input asp-for="CourseDescription" class="form-control" />
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorId" class="control-label"></label>
                <select asp-for="InstructorId" class ="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Index">
        <i class="material-icons">keyboard_arrow_left</i>
        <span>Back to List</span>
    </a>
</div>

