@model IEnumerable<CourseDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Course</a>
</p>
<table class="table  table-striped table-hover table-sm">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseTitle)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarqueeImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorId)
            </th>
            <th>
              Action
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <div class="z">
                <td>
                    @Html.DisplayFor(modelItem => item.CourseTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDescription)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarqueeImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InstructorId)
                </td>
                </div>
                <td class="btn-group x" role="group" aria-label="Basic mixed styles example">
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning border"><i class="material-icons">create</i>Edit</a>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success border"><i class="material-icons">info</i>Details</a>
                    </div>
                    <div>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger border"><i class="material-icons">delete</i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
