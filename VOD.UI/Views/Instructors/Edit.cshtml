@model InstructorDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="InstructorName" class="control-label"></label>
                <input asp-for="InstructorName" class="form-control" />
                <span asp-validation-for="InstructorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorDescription" class="control-label"></label>
                <input asp-for="InstructorDescription" class="form-control" />
                <span asp-validation-for="InstructorDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorAvatar" class="control-label"></label>
                <input asp-for="InstructorAvatar" class="form-control" />
                <span asp-validation-for="InstructorAvatar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Index">
        <i class="material-icons">keyboard_arrow_left</i>
        <span>Back to List</span>
    </a>
</div>

