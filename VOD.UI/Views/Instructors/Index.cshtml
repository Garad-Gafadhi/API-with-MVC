@model IEnumerable<InstructorDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Avialable Instructors</h1>

<p>  <a asp-action="Create" class="btn btn-primary">Create New Instructor</a></p>
<table class="table table-hover table-striped table-sm">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstructorAvatar)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstructorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstructorDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstructorAvatar)
                    </td>
                    <td class="btn-group x" role="group" aria-label="Basic mixed styles example">
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning border"><i class="material-icons">create</i>Edit</a>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success border"><i class="material-icons">info</i>Details</a>
                        </div>
                        <div>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger border"><i class="material-icons">delete</i>Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
