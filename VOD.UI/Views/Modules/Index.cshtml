@model IEnumerable<ModuleDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Avialable Modules</h1>

<p>  <a asp-action="Create" class="btn btn-primary">Create New Download</a></p>

<table class="table table-striped table-hover ">
    <thead class="table-dark" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseId)
                </td>
                <td class="btn-group col-md-6" role="group" aria-label="Basic mixed styles example">
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning border"><i class="material-icons">create</i>Edit</a>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success border"><i class="material-icons">info</i>Details</a>
                    </div>   <div>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger border"><i class="material-icons">delete</i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
