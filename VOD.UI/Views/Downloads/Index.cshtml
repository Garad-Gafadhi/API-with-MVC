@model IEnumerable<DownloadDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Downloads</h1>


<p>  <a asp-action="Create" class="btn btn-primary">Create New Download</a></p>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DownloadTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownloadUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DownloadTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownloadUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
           
            <td class="btn-group " role="group" aria-label="Basic mixed styles example">
                <div>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning border"><i class="material-icons">create</i>Edit</a>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success border"><i class="material-icons">info</i>Details</a>
                </div>   <div>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger border"><i class="material-icons">delete</i>Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
